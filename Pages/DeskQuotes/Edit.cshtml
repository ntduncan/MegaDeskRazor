@page
@model MegaDesk.Pages.DeskQuotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.DeskQuoteId"/>
            <input type="hidden" asp-for="DeskQuote.Desk.DeskId"/>
            <input type="hidden" asp-for="DeskQuote.QuoteDate"/>

            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="DeskQuote.RushOrderId" class="control-label"></label>
              <select asp-for="DeskQuote.RushOrderId" class="form-control" asp-items=ViewBag.RushOrderId required>
                <option value="">Choose</option>
              </select>
              <span asp-validation-for="DeskQuote.RushOrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Width" class="form-control" min="24" max="72"/>
                <span asp-validation-for="DeskQuote.Desk.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Depth" class="form-control" min="12" max="24"/>
                <span asp-validation-for="DeskQuote.Desk.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.NumberOfDrawers" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.NumberOfDrawers" class="form-control" min="0" max="7"/>
                <span asp-validation-for="DeskQuote.Desk.NumberOfDrawers" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="DeskQuote.Desk.DesktopMaterialId" class="control-label"></label>
              <select asp-for="DeskQuote.Desk.DesktopMaterialId" class="form-control" asp-items="ViewBag.DesktopMaterialId "required>
                <option value="">Choose</option>
              </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
